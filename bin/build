#!/bin/bash

set -e

echo "Entering build"

BASEDIR=$(cd $(dirname "$0") && pwd -P)

source $OPENSHIFT_CARTRIDGE_SDK_BASH

pushd ${OPENSHIFT_REPO_DIR} > /dev/null

echo "Cleaning"
$BASEDIR/sbt clean > $OPENSHIFT_PLAY2_LOG_DIR/build.log 2>&1

echo "Stage"
$BASEDIR/sbt stage >> $OPENSHIFT_PLAY2_LOG_DIR/build.log 2>&1

echo "Done!"

popd

